<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_primary_dark_lightened">
    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <AndroidX.AppCompat.Widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_primary" />
        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/background_toolbar_shadow"
            android:layout_marginBottom="-5dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
        <!-- Preferences -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_section"
                android:text="@string/Vernacular_P0_settings_section_preferences" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_bold"
                        android:text="@string/Vernacular_P0_settings_title_start_at_boot" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_simple"
                        android:text="@string/Vernacular_P0_settings_description_start_at_boot" />
                </LinearLayout>
                <View
                    style="@style/vertical_divider"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />
                <CheckBox
                    android:id="@+id/checkbox_start_at_boot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_bold"
                        android:text="@string/Vernacular_P0_settings_title_prefer_unmetered" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_simple"
                        android:text="@string/Vernacular_P0_settings_description_prefer_unmetered" />
                </LinearLayout>
                <View
                    style="@style/vertical_divider"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />
                <CheckBox
                    android:id="@+id/checkbox_prefer_unmetered"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />
            </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginBottom="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/text_bold"
                  android:text="@string/Vernacular_P0_settings_title_disable_suspension" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  style="@style/text_simple"
                  android:text="@string/Vernacular_P0_settings_description_disable_suspension" />
            </LinearLayout>
            <View
                style="@style/vertical_divider"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />
            <CheckBox
                android:id="@+id/checkbox_disable_suspension"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />
          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_bold"
                        android:text="@string/Vernacular_P0_settings_title_offline_mode" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_simple"
                        android:text="@string/Vernacular_P0_settings_description_offline_mode" />
                </LinearLayout>
                <View
                    style="@style/vertical_divider"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />
                <CheckBox
                    android:id="@+id/checkbox_offline_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />
            </LinearLayout>
          
            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
        
            <!-- Recording setup -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_section"
                android:text="@string/Vernacular_P0_settings_section_setup" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_bold"
                android:text="@string/Vernacular_P0_settings_title_vehicle" />
            <Spinner
                android:id="@+id/spinner_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_subtle"
                android:text="@string/Vernacular_P0_settings_description_vehicle"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_bold"
                android:text="@string/Vernacular_P0_settings_title_anchorage" />
            <Spinner
                android:id="@+id/spinner_anchorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_subtle"
                android:text="@string/Vernacular_P0_settings_description_anchorage"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
        <!-- Calibration -->
            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_section"
                android:text="@string/Vernacular_P0_settings_section_calibration" />
            <TextView
                android:id="@+id/text_calibration_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_subtle" />
            <TextView
                android:id="@+id/text_calibration_scale_factor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_subtle" />
            <TextView
                android:id="@+id/text_calibration_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_subtle" />
            <Button
                android:id="@+id/button_recalibrate"
                android:text="@string/Vernacular_P0_calibration_forget"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                style="@style/button_raised" />
        <!-- Introduction -->
            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_section"
                android:text="@string/Vernacular_P0_settings_section_introduction" />
            <Button
                android:id="@+id/button_redo"
                style="@style/button_raised"
                android:text="@string/Vernacular_P0_tutorial_redo" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>