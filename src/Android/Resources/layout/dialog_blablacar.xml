<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?dialogPreferredPadding"
    >
  <Button
      android:id="@+id/button_continue"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/Vernacular_P0_dialog_blablacar_ignore"
      style="@style/button_raised"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="?dialogPreferredPadding"
      android:layout_marginLeft="?dialogPreferredPadding"
      android:layout_marginRight="?dialogPreferredPadding"
      />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/button_continue"
      android:layout_marginTop="?dialogPreferredPadding"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="?dialogPreferredPadding"
        android:layout_marginRight="?dialogPreferredPadding"
        >
      <TextView
          android:id="@+id/text_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Vernacular_P0_dialog_blablacar_description"
          style="@style/text_paragraph"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/Vernacular_P0_dialog_blablacar_action_hint"
          style="@style/text_paragraph"
          android:layout_marginTop="@dimen/activity_vertical_margin_double"
          />
      <ImageButton
          android:id="@+id/button_install"
          android:layout_width="match_parent"
          android:layout_height="72dp"
          android:src="@drawable/blablacar_logo"
          android:scaleType="centerInside"
          android:gravity="center_horizontal"
          android:contentDescription="@string/Vernacular_P0_dialog_blablacar_accept"
          />
    </LinearLayout>
  </ScrollView>
</RelativeLayout>
